{
  "name": "@lzwme/fed-lint-helper",
  "description": "前端项目编码质量 lint 检测辅助工具。用于辅助大型长期研发的前端项目渐进式的迁移与改进编码规范约束。",
  "version": "2.0.3",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "typings": "cjs/index.d.ts",
  "license": "MIT",
  "repository": "https://github.com/lzwme/fed-lint-helper.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "keywords": [
    "fed",
    "lint-helper",
    "typescript",
    "eslint",
    "jest"
  ],
  "bin": {
    "flh": "bin/flh.js"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run watch:build",
    "start": "npm run watch",
    "build": "run-s clean && run-p build:*",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:lint": "eslint src --ext .ts --fix",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "npm run cov",
    "watch": "run-s clean build:cjs && run-p \"build:cjs -- -w\" \"test:unit -- --watch\"",
    "watch:build": "tsc -p tsconfig.cjs.json -w",
    "watch:test": "jest --watch",
    "cov": "jest --coverage --silent",
    "cov:html": "jest --coverage --silent --reporter=html",
    "doc": "run-s doc:html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out docs --tsconfig tsconfig.module.json",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json docs/typedoc.json --tsconfig tsconfig.module.json",
    "version": "standard-version",
    "dist": "run-s test build doc:html",
    "release": "run-s dist",
    "release-version": "run-s dist version",
    "clean": "ts-node -T -p tsconfig.cjs.json src/rmdir.ts ./cjs ./esm ./docs"
  },
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "dependencies": {
    "@lzwme/fe-utils": "^1.1.0",
    "commander": "^9.4.1",
    "console-log-colors": "^0.2.3",
    "enquirer": "^2.3.6",
    "fast-glob": "^3.2.12",
    "micromatch": "^4.0.5"
  },
  "devDependencies": {
    "@jest/core": "^29.2.1",
    "@jest/test-result": "^29.2.1",
    "@jest/types": "^29.2.1",
    "@node-rs/deno-lint": "^1.14.0",
    "@types/eslint": "^8.4.7",
    "@types/jest": "^29.2.0",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.18",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "@jest/core": "*"
  },
  "peerDependenciesMeta": {
    "@jest/core": {
      "optional": true
    }
  },
  "packageManager": "pnpm@7.6.0"
}
