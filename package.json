{
  "name": "@lzwme/fed-lint-helper",
  "description": "前端项目编码质量 lint 检测辅助工具。用于辅助大型长期研发的前端项目渐进式的迁移与改进编码规范约束。",
  "version": "1.1.0",
  "main": "build/main/index.js",
  "browser": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "license": "MIT",
  "repository": "https://github.com/lzwme/fed-lint-helper.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "private": false,
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "fed",
    "lint-helper",
    "typescript",
    "eslint",
    "jest"
  ],
  "bin": {
    "flh": "flh.js"
  },
  "scripts": {
    "dev": "tsc -w",
    "start": "npm run watch",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:summary": "nyc report --reporter=text-summary",
    "doc": "run-s doc:html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "version": "standard-version",
    "prepare-release": "run-s clean test doc:html version",
    "release": "run-s clean build doc",
    "clean": "node scripts/rmdir.mjs ./build"
  },
  "dependencies": {
    "chalk": "*",
    "commander": "^8.2.0",
    "glob": "^7.1.7"
  },
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-angular": "^13.1.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/commander": "^2.12.2",
    "@types/eslint": "^7.28.0",
    "@types/glob": "^7.1.4",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "ava": "^3.15.0",
    "codecov": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ava": "^12.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "ts-node": "^10.2.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "@types/jest": ">=25",
    "eslint": ">=7",
    "jest": ">=25"
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "typescript_ava": {
      "extensions": [
        "ts",
        "tsx"
      ],
      "rewritePaths": {
        "src/": "build/main/"
      },
      "compile": false
    },
    "files": [
      "src/**/*.spec.ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
