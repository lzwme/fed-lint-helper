{
  "name": "@lzwme/fed-lint-helper",
  "description": "前端项目编码质量 lint 检测辅助工具。用于辅助大型长期研发的前端项目渐进式的迁移与改进编码规范约束。",
  "version": "1.5.0",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "license": "MIT",
  "repository": "https://github.com/lzwme/fed-lint-helper.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "private": false,
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "fed",
    "lint-helper",
    "typescript",
    "eslint",
    "jest"
  ],
  "bin": {
    "flh": "cli.js"
  },
  "scripts": {
    "dev": "tsc -w",
    "start": "npm run watch",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "npm run cov",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watch",
    "cov": "jest --coverage --silent",
    "cov:html": "jest --coverage --silent --reporter=html",
    "cov:send": "run-s cov:lcov && codecov",
    "doc": "run-s doc:html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "version": "standard-version",
    "prepare-release": "run-s clean build test doc:html version",
    "release": "run-s clean build doc",
    "clean": "node scripts/rmdir.mjs ./build"
  },
  "dependencies": {
    "commander": "^9.0.0",
    "console-log-colors": "^0.2.3",
    "glob": "^7.2.0",
    "minimatch": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-angular": "^16.2.1",
    "@jest/core": "^27.5.1",
    "@types/eslint": "^8.4.1",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "codecov": "^3.8.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.13",
    "typescript": "^4.5.4"
  },
  "optionalDependencies": {
    "@node-rs/deno-lint": ">=1.13.0",
    "@types/eslint": ">=7",
    "@types/jest": ">=25",
    "eslint": ">=7",
    "jest": ">=25",
    "prettier": ">=2",
    "typescript": ">=3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
