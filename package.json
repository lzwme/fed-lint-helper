{
  "name": "@lzwme/fed-lint-helper",
  "description": "前端项目编码质量 lint 检测辅助工具。用于辅助大型长期研发的前端项目渐进式的迁移与改进编码规范约束。",
  "version": "1.11.0",
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "typings": "build/main/index.d.ts",
  "license": "MIT",
  "repository": "https://github.com/lzwme/fed-lint-helper.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "keywords": [
    "fed",
    "lint-helper",
    "typescript",
    "eslint",
    "jest"
  ],
  "bin": {
    "flh": "bin/flh.js"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run watch:build",
    "start": "npm run watch",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.cjs.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:lint": "eslint src --ext .ts --fix",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "npm run cov",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "watch:build": "tsc -p tsconfig.cjs.json -w",
    "watch:test": "jest --watch",
    "cov": "jest --coverage --silent",
    "cov:html": "jest --coverage --silent --reporter=html",
    "doc": "run-s doc:html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs --tsconfig tsconfig.module.json",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json --tsconfig tsconfig.module.json",
    "version": "standard-version",
    "dist": "run-s test build doc:html",
    "release": "run-s dist",
    "release-version": "run-s dist version",
    "clean": "ts-node src/rmdir.ts ./build"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "dependencies": {
    "commander": "^9.3.0",
    "console-log-colors": "^0.2.3",
    "fast-glob": "^3.2.11",
    "minimatch": "^5.1.0"
  },
  "devDependencies": {
    "@jest/core": "^28.1.1",
    "@jest/types": "^28.1.1",
    "@node-rs/deno-lint": "^1.13.1",
    "@swc/core": "^1.2.204",
    "@swc/jest": "^0.2.21",
    "@types/eslint": "^8.4.3",
    "@types/jest": "^28.1.3",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.8.1",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.1.0"
}
